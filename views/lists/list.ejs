<!-- views/index.ejs -->
<!doctype html>
<html>
	<head>
		<title><%= title %></title>

		<% include ../html/scripts_css %>
		
		<script type="text/javascript" src="/public/js/bootstrap-toggle.min.js"></script>
		<link rel="stylesheet" href="/public/css/bootstrap-toggle.min.css">
		

		<script>

			if(/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
				
			}else{
				
			}

			var listid ="<%-list._id%>";

			$( document ).ready(function()
			{
				$('#toggle-event').change(function()
				{
					$.post("/matches/participate",
					{
						list_id       : listid,
						player_status : $(this).prop('checked')
					},
					function(data, status)
					{
						$.get("/matches/match/details/" + listid + " #list_container", function(data) {
							$("#list_container").html( data );
						});

					});

				});
				
			})

		</script>

	</head>
	<body>
		<% include ../html/top %>
		<div class="jumbotron">
			<div class="page-header">
					<h3>
						<p class="text-center">
							<title><%= title %></title>
						</p>
					</h3>
				
			</div>
			<p class="text-center">
				<%if (player_on_list == true) { %>
					<input type="checkbox" id="toggle-event" checked data-toggle="toggle" data-on="Yes" data-off="No">
				<% }else{ %>
					<input type="checkbox" id="toggle-event" data-toggle="toggle" data-on="Yes" data-off="No">
				<% } %>
			</p>
			<div id="list_container">
				<div>
					<% include list_details %>
				</div>
			</div>
			<div id="loadedContainer">
			</div>
		</div>
		
	</body>
</html>