<!-- views/index.ejs -->
<!doctype html>
<html>
	<head>
		<title><%= title %></title>

		<% include ../html/scripts_css %>

		<script type="text/javascript" src="/public/js/bootstrap-switch.min.js"></script>
		<link rel="stylesheet" href="/public/css/bootstrap3/bootstrap-switch.min.css" />

		<script>

			if(/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
				
			}else{
				
			}

			var listid ="<%-list._id%>";

			$( document ).ready(function()
			{
				$('#toggle-event').change(function()
				{
					$.post("/matches/participate",
					{
						list_id       : listid,
						player_status : $(this).prop('checked')
					},
					function(data, status)
					{
						$.get("/matches/match/details/" + listid + " #list_container", function(data) {
							$("#list_container").html( data );
						});

					});

				});

				$("#creatorOnList").bootstrapSwitch({
					labelText     : "Include name on match?",
					onText        : "Yes",
					offText       : "No",
					labelWidth    : "175",
					offColor      : "danger",
					state         : <%= player_on_list %>
				}).on('switchChange.bootstrapSwitch', function(event, state)
				{
					$.post("/matches/participate",
					{
						list_id       : listid,
						player_status : state
					},
					function(data, status)
					{
						$.get("/matches/match/details/" + listid + " #list_container", function(data) {
							$("#list_container").html( data );
						});

					});
				});
				
			})

		</script>

	</head>
	<body>
		<% include ../html/top %>
		<div class="jumbotron">
			<div class="page-header">
				<div class="container">
					<div class="row">
						<div class="col-sm-4">
						</div>
						<div class="col-sm-4">
							<p class="text-center">
								Status: <%= list.list_status %>
							</p>
							<p class="text-center">
								Date: <%= moment(list.list_date,'x').format('DD/MM/YYYY HH:mm') %><br/>
							</p>
							<p class="text-center">
								People Playing: <%= list.list_size %>
							</p>
						</div>
						<div class="col-sm-4">
						</div>
					</div>
				</div>

			</div>
			<div class="row">
				<div class="col-sm-4">
				</div>
				<div class="col-sm-4">
					<p class="text-center">
						<label class="checkbox-inline">
							<input type="checkbox" id="creatorOnList" value="option">
						</label>
					</p>
					<div id="list_container">
						<div>
							<% include match_list_details %>
						</div>
					</div>
				</div>
				<div class="col-sm-4">
				</div>
				<div id="loadedContainer">
				</div>
			</div>
		</div>
		
	</body>
</html>