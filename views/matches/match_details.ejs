<!-- views/index.ejs -->
<!doctype html>
<html>
	<head>
		<title><%= title %></title>

		<% include ../html/scripts_css %>
		
		<script type="text/javascript" src="/public/js/bootstrap-toggle.min.js"></script>
		<link rel="stylesheet" href="/public/css/bootstrap-toggle.min.css">
		

		<script>

			if(/Android|webOS|iPhone|iPad|iPod|BlackBerry|IEMobile|Opera Mini/i.test(navigator.userAgent) ) {
				
			}else{
				
			}

			var listid ="<%-list._id%>";

			$( document ).ready(function()
			{
				$('#toggle-event').change(function()
				{
					$.post("/matches/participate",
					{
						list_id       : listid,
						player_status : $(this).prop('checked')
					},
					function(data, status)
					{
						$.get("/matches/match/details/" + listid + " #list_container", function(data) {
							$("#list_container").html( data );
						});

					});

				});
				
			})

		</script>

	</head>
	<body>
		<% include ../html/top %>
		<div class="jumbotron">
			<div class="page-header">
				<div class="container">
					<div class="row">
						<div class="col-sm-4">
						</div>
						<div class="col-sm-4">
							<p class="text-center">
								Status: <%= list.list_status %>
							</p>
							<p class="text-center">
								Date: <%= moment(list.list_date,'x').format('DD/MM/YYYY HH:mm') %><br/>
							</p>
							<p class="text-center">
								People Playing: <%= list.list_size %>
							</p>
						</div>
						<div class="col-sm-4">
						</div>
					</div>
				</div>

			</div>
			<div class="row">
				<div class="col-sm-4">
				</div>
				<div class="col-sm-4">
					<p class="text-center">
						<%if (player_on_list == true) { %>
							<input type="checkbox" id="toggle-event" <%= disabled %> checked data-toggle="toggle" data-on="Yes" data-off="No">
						<% }else{ %>
							<input type="checkbox" id="toggle-event" <%= disabled %> data-toggle="toggle" data-on="Yes" data-off="No">
						<% } %>
					</p>
					<div id="list_container">
						<div>
							<% include match_list_details %>
						</div>
					</div>
				</div>
				<div class="col-sm-4">
				</div>
				<div id="loadedContainer">
				</div>
			</div>
		</div>
		
	</body>
</html>